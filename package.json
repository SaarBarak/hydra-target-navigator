{
  "name": "hydra-target-navigator",
  "displayName": "Hydra Target Navigator",
  "description": "Navigate Hydra config _target_ references in YAML files and copy Python targets as Hydra snippets.",
  "icon": "img/image.png",
  "version": "0.1.0",
  "publisher": "Saar-Barak",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:yaml",
    "onLanguage:python"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "yaml",
        "extensions": [".yml", ".yaml"]
      }
    ],
    "commands": [
      {
        "command": "extension.copyTargetAsHydra",
        "title": "Copy Target as Hydra"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "extension.copyTargetAsHydra",
          "when": "editorLangId == python",
          "group": "navigation"
        }
      ]
    },
    "configuration": {}
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -w -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "20.x",
    "@types/vscode": "^1.97.0",
    "@types/mocha": "^10.0.10",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "eslint": "^9.19.0",
    "typescript": "^5.7.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^2.32.0"
  },
  "dependencies": {
    "js-yaml": "^4.1.0"
  }
}
